{
    "manifest_version": 3,
    "name": "ChatGPT プロンプト自動入力",
    "version": "1.0",
    "description": "ワンタッチでChatGPTにプロンプトを追加できます。回答が途中で途切れた場合「続けて」などと入力してください。",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "./neko_16x16.png",
        "32": "./neko_32x32.png",
        "48": "./neko_48x48.png",
        "128": "./neko_128x128.png"
      }
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "icons": {
        "16": "./neko_16x16.png",
        "32": "./neko_32x32.png",
        "48": "./neko_48x48.png",
        "128": "./neko_128x128.png"
    }
}  